CFLAGS		=	-Wall -Wextra -Werror -std=c++98 -MMD -MP

SRC_FILES	=	main.cpp Bureaucrat.cpp

COMPILER	=	c++

OBJDIR		=	objs
OBJS		=	$(addprefix $(OBJDIR)/, $(SRC_FILES:.cpp=.o))
DEPS		=	$(addprefix $(OBJDIR)/, $(SRC_FILES:.cpp=.d))

NAME		=	bureaucrat

COLOR = \033[1;32m
RESET = \033[0m

ifeq ($(firstword $(MAKECMDGOALS)),)
	MSG1:=⠀⠀⠀⠀COMPILED⠀⠀⠀⠀⠀⠀⠀⠀
	MSG2:=⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀
	MSG3:=⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀
else ifneq ($(filter $(firstword $(MAKECMDGOALS)),all $(NAME)),)
	MSG1:=⠀⠀⠀⠀COMPILED⠀⠀⠀⠀⠀⠀⠀⠀
	MSG2:=⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀
	MSG3:=⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀
else ifneq ($(filter $(firstword $(MAKECMDGOALS)),c clean),)
	MSG1:=OBJECT FILES REMOVED
	MSG2:=⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀
	MSG3:=⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀
else ifneq ($(filter $(firstword $(MAKECMDGOALS)),f fclean),)
	MSG1:=OBJECT FILES REMOVED
	MSG2:=⠀EXECUTABLE REMOVED⠀
	MSG3:=⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀
else ifneq ($(filter $(firstword $(MAKECMDGOALS)),re),)
	MSG1:=OBJECT FILES REMOVED
	MSG2:=⠀EXECUTABLE REMOVED⠀
	MSG3:=⠀⠀⠀⠀⠀COMPILED⠀⠀⠀⠀⠀⠀⠀
endif

all	:	$(NAME)

$(NAME)	:	$(OBJS)
	@$(COMPILER) $(OBJS) -o $(NAME)
	@echo "$(COLOR)COMPILED!$(RESET)"

ifeq ($(firstword $(MAKECMDGOALS)),)
	@echo "$(PIKACHU)"
else ifneq ($(filter $(firstword $(MAKECMDGOALS)),all $(NAME)),)
	@echo "$(PIKACHU)"
endif

$(OBJDIR)/%.o	:	%.cpp
	@mkdir -p $(dir $@)
	@$(COMPILER) $(CFLAGS) -c $< -o $@

-include $(DEPS)

c	:	clean
clean	:
	@rm -rf $(OBJDIR)
	@echo "$(COLOR)OBJECT FILES REMOVED$(RESET)"

ifneq ($(filter $(firstword $(MAKECMDGOALS)),c clean),)
	@echo "$(PIKACHU)"
endif

f	: fclean
fclean	:	clean
	@rm -rf $(NAME)
	@echo "$(COLOR)EXECUTABLES REMOVED$(RESET)"

ifneq ($(filter $(firstword $(MAKECMDGOALS)),f fclean),)
	@echo "$(PIKACHU)"
endif

re	: fclean all
	@echo "$(COLOR)RE_MADE!$(RESET)"

ifneq ($(filter $(firstword $(MAKECMDGOALS)),re),)
	@echo "$(PIKACHU)"
endif

run	:	all
	@./$(NAME)

val	:	all
	@valgrind --track-origins=yes ./$(NAME)

.phony	:	all c clean f fclean re run val

PIKACHU	=⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⢀⡀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀\n\
